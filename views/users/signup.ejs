<% layout("/layouts/boilerplate.ejs") %>

<div class="row mt-3">
  <h1 class="mb-4 fs-2 text-center">Signup on WanderStay</h1>
  <div
    class="col-xxl-6 offset-xxl-3 col-xl-6 offset-xl-3 col-lg-6 offset-lg-3 col-md-6 offset-md-3 px-4"
  >
    <form action="/signup" method="POST" class="needs-validation" novalidate>
      <!-- username -->
      <div class="mb-3">
        <label for="username" class="form-label">Username</label>
        <input type="text" name="username" id="username" class="form-control" required />
        <div class="valid-feedback">Looks good!</div>
      </div>
      <!-- email -->
      <div class="mb-3">
        <label for="email" class="form-label">Email</label>
        <input type="email" name="email" id="email" class="form-control" required />
      </div>
      <!-- password -->
      <div class="mb-3">
        <label for="password" class="form-label">Password</label>
        <div class="form-password form-control">
          <input type="password" name="password" id="password" class="form-control" required />
          <i class="fa-regular fa-eye-slash" id="togglePassword"></i>
        </div>
      </div>
      <div class="text-center">
        <button class="btn btn-success px-4">Sign up</button>
      </div>
    </form>
  </div>
</div>
